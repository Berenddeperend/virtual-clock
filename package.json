    "flow": "flow",
    "lint": "eslint src/virtual-clock.js",
    "prepare": "npm run build",
    "test": "cross-env NODE_ENV=test nyc mocha --ui tdd"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
