{
  "name": "virtual-clock",
  "version": "1.0.4",
  "description": "A small, high-resolution, high-performance virtual clock library",
  "author": "DaniÃ«l van de Giessen",
  "license": "MIT",
  "homepage": "https://github.com/DvdGiessen/virtual-clock#readme",
  "bugs": {
    "url": "https://github.com/DvdGiessen/virtual-clock/issues"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "virtual",
    "clock",
    "time",
    "timer",
    "timing",
    "stopwatch",
    "timeout",
    "interval",
    "duration",
    "event",
    "settimout",
    "setinterval"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DvdGiessen/virtual-clock.git"
  },
  "main": "dist/virtual-clock.js",
  "module": "dist/virtual-clock.mjs",
  "scripts": {
    "build:clean": "rimraf dist/",
    "build:umd": "cross-env NODE_ENV=production babel src/ --out-dir dist/ --source-maps --copy-files",
    "build:mjs": "flow-remove-types -o dist/virtual-clock.mjs src/virtual-clock.js",
    "build": "npm run build:clean && npm run build:umd && npm run build:mjs",
    "flow": "flow",
    "lint": "eslint src/**/*.js",
    "prepare": "npm run build",
    "test": "cross-env NODE_ENV=test nyc mocha --ui tdd"
  },
  "devDependencies": {
    "babel-cli": "^6",
    "babel-core": "^6",
    "babel-eslint": "^8.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1",
    "babel-plugin-transform-es2015-modules-umd": "^6",
    "babel-preset-env": "^1.6",
    "babel-preset-flow": "^6",
    "babel-register": "^6",
    "chai": "^4.1",
    "cross-env": "^5.1.3",
    "eslint": "^4.15",
    "eslint-plugin-flowtype": "^2.41",
    "flow-bin": "^0.63.1",
    "flow-remove-types": "^1.2.3",
    "lolex": "^2.3",
    "mocha": "^4.1",
    "nyc": "^11.4",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.4"
  }
}
